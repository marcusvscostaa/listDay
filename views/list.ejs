
<%-include("header")%>

<div class="box" id="heading">
    <h1><%=listTitle%></h1>
</div>

<div class="box">
    <% itens.forEach(function(item, i){ %>
        <div class="card">
            <div class="item">
                <input type="checkbox">
                <p> <%= item.name %> </p>
            </div>
            <div class="remove">
                <form class="buttonRemove" action="/remove" name="remove2" method="post">
                    <button class="buttonRemove" type="submit" name="remove" value = <%= item._id %>>X</button>
                    <input type="hidden" name="titleName" value=<%= listTitle %>> 
                </form>
            </div> 
        </div>
    <% }) %>

    <form class="addItem" action="/" method="post">
        <input type="text" name="newItem" placeholder="Add New Item" autocomplete="off">
        <button type="submit" name="list" value=<%= listTitle %>>+</button>
    </form>
    <%if(status === "true"){%>
        <%var mensage = "*Campo nÃ£o preenchidos"%>
        <p class="alertItem"><%=mensage%></p>
    <%}%>  
</div>
<%-include("footer")%>
